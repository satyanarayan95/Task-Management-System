{
  "name": "task-management-system",
  "version": "1.0.0",
  "description": "A modern task management system with React frontend, Express backend, and scheduler service",
  "scripts": {
    "dev": "docker-compose up --build",
    "start": "docker-compose up -d --build",
    "stop": "docker-compose down",
    "clean": "docker-compose down -v",
    "restart": "docker-compose restart",
    "logs": "docker-compose logs -f",
    "logs:backend": "docker-compose logs -f backend",
    "logs:frontend": "docker-compose logs -f frontend",
    "logs:scheduler": "docker-compose logs -f scheduler",
    "seed": "docker-compose exec backend npm run seed",
    "test": "docker-compose exec backend npm test && docker-compose exec frontend npm test",
    "test:backend": "docker-compose exec backend npm test",
    "test:frontend": "docker-compose exec frontend npm test",
    "test:scheduler": "docker-compose exec scheduler npm test",
    "health": "curl -f http://localhost:5500/api/health",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../scheduler && npm install && cd ../shared && npm install",
    "dev:local": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:scheduler\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:scheduler": "cd scheduler && npm run dev",
    "build": "cd frontend && npm run build",
    "docker:build": "docker-compose build",
    "docker:rebuild": "docker-compose build --no-cache"
  },
  "keywords": [
    "task-management",
    "react",
    "express",
    "mongodb",
    "redis",
    "docker",
    "microservices",
    "full-stack",
    "demo"
  ],
  "author": "Developer",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "docker": ">=20.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "playwright": "^1.55.1"
  }
}
